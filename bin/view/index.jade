doctype html
html(lang="en" ng-app="app")
  head
    link(rel="styleSheet" href="static/css/bootstrap.min.css")
    link(rel="styleSheet" href="static/css/jumbotron-narrow.css")
  body
    .container
      .header
        nav
          ul(class="nav nav-pills pull-right")
            li(role="presentation" class="active")
              a(href="#") Home
            li(role="presentation")
              a(href="#") About
            li(role="presentation")
              a(href="#") Contact
      h3(class="text-muted") Project name
      form(class="jumbotron" ng-submit="send()")
        div(ng-controller="msnCtrl")
          .col-lg-10
            input(type="text" class="form-control input-lg" ng-model="msg")
          .col-lg-2
            button(class="btn btn-success" ng-click="send()") Send
          .clearfix
          div(ng-repeat="msg in msgs track by $index")
            p {{msg}}

  script(src="static/js/jquery.js")
  script(src="static/js/angular.js")
  script(src="static/js/socket.io.js")
  script(src="static/js/bootstrap.min.js")
  script
    include ../public/js/app.js
